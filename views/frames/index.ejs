                <li>
                  <a class="dropdown-item" href="#"
                    ><input
                      class="form-check-input me-2"
                      type="checkbox"
                      name="color"
                      value="Brown"
                      <%= Array.isArray(color) && color.includes("Brown") || color === "Brown" ? "checked" : "" %>
                      />
                    Brown</a
